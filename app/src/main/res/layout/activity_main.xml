<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="0"
            android:textSize="32sp"
            android:ellipsize="start"
            android:layout_below="@+id/text_calculate_string"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_calculate_string"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/abc_text_size_small_material"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:singleLine="true"
            android:gravity="right" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frameLayout"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:id="@+id/buttons_layout">

        <LinearLayout style="@style/style_buttons_row">

            <Button
                android:id="@+id/btn_open_bracket"
                style="@style/style_button_action"
                android:text="(" />

            <Button
                android:id="@+id/btn_close_bracket"
                style="@style/style_button_action"
                android:text=")" />

            <Button
                android:id="@+id/btn_backspace"
                style="@style/style_button_action"
                android:text="CLEAR" />

            <Button
                android:id="@+id/btn_divide"
                style="@style/style_button_action"
                android:text="÷" />
        </LinearLayout>

        <LinearLayout style="@style/style_buttons_row">

            <Button
                android:id="@+id/btn_7"
                style="@style/style_button_action"
                android:text="7" />

            <Button
                android:id="@+id/btn_8"
                style="@style/style_button_action"
                android:text="8" />

            <Button
                android:id="@+id/btn_9"
                style="@style/style_button_action"
                android:text="9" />

            <Button
                android:id="@+id/btn_multiply"
                style="@style/style_button_action"
                android:text="×" />
        </LinearLayout>

        <LinearLayout style="@style/style_buttons_row">

            <Button
                android:id="@+id/btn_4"
                style="@style/style_button_action"
                android:text="4" />

            <Button
                android:id="@+id/btn_5"
                style="@style/style_button_action"
                android:text="5" />

            <Button
                android:id="@+id/btn_6"
                style="@style/style_button_action"
                android:text="6" />

            <Button
                android:id="@+id/btn_minus"
                style="@style/style_button_action"
                android:text="−" />
        </LinearLayout>

        <LinearLayout style="@style/style_buttons_row">

            <Button
                android:id="@+id/btn_1"
                style="@style/style_button_action"
                android:text="1" />

            <Button
                android:id="@+id/btn_2"
                style="@style/style_button_action"
                android:text="2" />

            <Button
                android:id="@+id/btn_3"
                style="@style/style_button_action"
                android:text="3" />

            <Button
                android:id="@+id/btn_plus"
                style="@style/style_button_action"
                android:text="+" />
        </LinearLayout>

        <LinearLayout style="@style/style_buttons_row">

            <Button
                android:id="@+id/btn_plus_minus"
                style="@style/style_button_action"
                android:text="±" />

            <Button
                android:id="@+id/btn_0"
                style="@style/style_button_action"
                android:text="0" />

            <Button
                android:id="@+id/btn_point"
                style="@style/style_button_action"
                android:text="." />

            <Button
                android:id="@+id/btn_equals"
                style="@style/style_button_action"
                android:text="=" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
